<body>
<form asp-action="Edit" asp-controller="Menu">
    <div>
        <input type="hidden" asp-for="Id" />    
        
        <div class="form-group">
            <label asp-for="Name"></label>
            <input type="text" asp-for="Name" class="form-control" />
        </div>
        <div class="form-group">
            <label asp-for="Type"></label>
            <input type="text" asp-for="Type" class="form-control" />
        </div>
        <div class="form-group">
            <label asp-for="Price"></label>
            <input type="number" asp-for="Price" class="form-control" />
        </div>
        
        <div class="form-group">
            <input type="submit" value="Сохранить" class="btn btn-outline-secondary" />
            <a asp-controller="Menu" asp-action="Report">Вернуться</a>
        </div>
    </div>
</form>
