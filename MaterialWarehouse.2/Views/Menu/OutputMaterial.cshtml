@model Models.OutputMaterials
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <title>Материалы поступающие на склад</title>
    <style>
        .form-group{margin-bottom: 10px; width: 210px; padding-left: 5px;
                             position: relative; left: 50%; transform: translate(-50%);}
                            input{border:1px solid #00C4F2; border-radius: 5px}
    </style>
</head>
<body>
<form asp-action="OutputMaterial" asp-controller="Menu">
    <div>
        <div class="form-group">
            <label asp-for="TransDate"></label>
            <input type="date" asp-for="TransDate" class="form-control form-control-sm" required/>
        </div>
        <div class="form-group">
            <label asp-for="DocumentId"></label>
            <input asp-for="DocumentId" class="form-control  form-control-sm" required/>
        </div>
        <div class="form-group">
            <label asp-for="Price">Price_$</label>
            <input type="number" asp-for="Price" class="form-control form-control-sm" required/>
        </div>
        <div class="form-group">
            <label asp-for="MaterialId"></label>
            <input type="number" asp-for="MaterialId" class="form-control form-control-sm" required/>
        </div>
        <div class="form-group">
            <input type="submit" value="Сохранить" class="btn btn-outline-secondary"/>
        </div>
    </div>
</form>
</body>
</html>