@model Models.MovingMaterials
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <title>Материалы поступающие на склад</title>
    <style>
        .form-group{margin-bottom: 10px; width: 210px; padding-left: 5px;
                     position: relative; left: 50%; transform: translate(-50%);}
                    input{border:1px solid #00C4F2; border-radius: 5px}
    </style>
</head>
<body>
<form asp-action="InputMaterial" asp-controller="Menu">
    <div>
        <div class="form-group">
            <label asp-for="TransDate"></label>
            <input type="datetime-local" asp-for="TransDate" required/>
        </div>
        <div class="form-group">
            <label asp-for="DocumentId"></label>
            <input asp-for="DocumentId" required/>
        </div>
        <div class="form-group">
            <label asp-for="SupplierName"></label>
            <input asp-for="SupplierName" required/>
        </div>
        <div class="form-group">
            <label asp-for="Price">Price_$</label>
            <input type="number" asp-for="Price" required/>
        </div>
        <div class="form-group">
            <label asp-for="MaterialId"></label>
            <input type="number" asp-for="MaterialId" required/>
        </div>
        <div class="form-group">
            <input type="submit" value="Сохранить" class="btn btn-outline-secondary" required/>
        </div>
    </div>
</form>
</body>
</html>